<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeFragment">

    <Button
        android:id="@+id/reportarIncidenteVisitanteBTN"
        android:layout_width="321dp"
        android:layout_height="75dp"
        android:backgroundTint="@color/azul"
        android:gravity="center_vertical"
        android:text="Reportar Incidente"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/misReportesVisitanteBTN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/misReportesVisitanteBTN"
        android:layout_width="321dp"
        android:layout_height="75dp"
        android:backgroundTint="@color/azul"
        android:gravity="center_vertical"
        android:text="Mis Reportes"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/reglamentoVisitanteBTN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reportarIncidenteVisitanteBTN" />

    <Button
        android:id="@+id/reglamentoVisitanteBTN"
        android:layout_width="321dp"
        android:layout_height="75dp"
        android:backgroundTint="@color/azul"
        android:gravity="center_vertical"
        android:text="Reglamento"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/misReportesVisitanteBTN" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="328dp"
        android:layout_height="132dp"
        app:layout_constraintBottom_toTopOf="@+id/reportarIncidenteVisitanteBTN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logodecolores" />

</androidx.constraintlayout.widget.ConstraintLayout>