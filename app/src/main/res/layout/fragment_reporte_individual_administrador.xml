<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.ReporteIndividualAdministrador">


    <TextView
        android:id="@+id/tituloReporte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/lato_bold"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="Hay una fuga de agua en los banos "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descripcionReporte"
        android:layout_width="312dp"
        android:layout_height="244dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/lato"
        android:text="Esto es un texto generico Esto es un texto generico Esto es un texto generico Esto es un texto generico Esto es un texto generico Esto es un texto generico Esto es un texto generico Esto es un texto generico "
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloReporte" />

    <Button
        android:id="@+id/button"
        android:layout_width="239dp"
        android:layout_height="198dp"
        android:layout_marginTop="12dp"
        android:text="tremporal mapa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descripcionReporte" />

    <Button
        android:id="@+id/enviarRespuestaBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Responder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.585"
        tools:layout_editor_absoluteX="283dp" />

    <Button
        android:id="@+id/regresarDeRespuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Regresar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.125"
        tools:layout_editor_absoluteX="36dp" />
</androidx.constraintlayout.widget.ConstraintLayout>