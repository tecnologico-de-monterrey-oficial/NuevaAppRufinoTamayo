<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.Respuesta"
    android:background="@color/fondo"
    tools:context=".controller.RespuestaVisitante">

    <TextView
        android:id="@+id/descripcionReporteOutputTXT"
        android:layout_width="276dp"
        android:layout_height="81dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/lato_bold"
        android:text="*Descripcion del problema,
        hay una fuga de agua en los baÃ±os*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/respuestaDelAdministradorTXT"
        android:layout_width="278dp"
        android:layout_height="99dp"
        android:layout_marginTop="104dp"
        android:text="Respuesta de los admins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descripcionReporteOutputTXT" />

    <Button
        android:id="@+id/regresarRespuestaVisitanteBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="40dp"
        android:text="Regresar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/respuestaDelAdministradorTXT"
        app:layout_constraintVertical_bias="0.996" />

    <EditText
        android:id="@+id/responderReporte"
        android:layout_width="299dp"
        android:layout_height="128dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="responder"
        app:layout_constraintBottom_toTopOf="@+id/regresarRespuestaVisitanteBTN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/respuestaDelAdministradorTXT"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/enviarRespuesta"
        android:layout_width="118dp"
        android:layout_height="42dp"
        android:text="Enviar"
        app:layout_constraintBottom_toTopOf="@+id/regresarRespuestaVisitanteBTN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/responderReporte" />

</androidx.constraintlayout.widget.ConstraintLayout>